{
  "include": ["src/**/*"],
  "compilerOptions": {
    "target": "es2016",
    "module": "ES6",
    "checkJs": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "skipLibCheck": true
  }
}
